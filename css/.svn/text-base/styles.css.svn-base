a#close_revision_viewer
{
	cursor: pointer;
}

div#revert_buttons_container
{
	margin-top:10px;
	margin-bottom:10px;
}

button#revert_all_files
{
	margin-left:10px;
}

textarea#file_container
{
	padding-left:1px;
	margin-top:5px;
	overflow:auto;
	text-align:left;
	height:373px;  
	-moz-box-shadow: inset 0 1px 0 #DFDFDF;
	-webkit-box-shadow: inset 0 1px 0 #DFDFDF;
	box-shadow: inset 0 1px 0 #DFDFDF;
	background-color:#F9F9F9;
	width:100%;
}

h3.hndle
{
	cursor:default;
}

button#view_revision_button
{
	margin-top:10px;
	margin-bottom:10px;
}

h2.page_title
{
	text-align:left;
}

div#main_viewer_container
{
	text-align:center;
	height:100%;	
}

div#upper_revision_viewer_container
{
	margin-top:10px;
}

div#revision_selector_container
{
	height:230px;
}

div#revision_viewer_dialog
{
	display:none;
	padding-right:15px;
}

th#revision_form_commit_msg_header
{
	width:40%;
}

div#revision_table_container
{
	float:left;
	clear:both;
	width:100%;
}

div#revision_table_body_container
{
	width:100%;
}

#revision_selector_table
{
	border-bottom-color: #DFDFDF;
	border-bottom-left-radius: 3px;
	border-bottom-right-radius: 3px;
	border-bottom-style: solid;
	border-bottom-width: 1px;
	border-collapse: separate;
}

#revision_table_body_container
{
	height:100px;
	overflow:auto;
	width:100%;
}

#revision_form_body
{
	text-align:left;
}

.revision_form_cell
{
	width:20%;
}

.revision_form_commit_msg
{
	width:40%;	
}

div#view_revision_button_container
{
	margin-top:10px;
	float:left;
	clear:both;
}
